---
import { GoogleFontsOptimizer } from "astro-google-fonts-optimizer";
import { SEO, Props as AstroSeoProps } from "astro-seo";
import { ViewTransitions } from "astro:transitions";
import AnalyticsBody from "src/layouts/common/AnalyticsBody.astro";
import AnalyticsHead from "src/layouts/common/AnalyticsHead.astro";
import DesignToken from "src/layouts/common/DesignToken.astro";
import { siteData } from "src/layouts/common/Variables.astro";

import "src/styles/foundation/reset.scss";
import "src/styles/foundation/base.scss";

export type Props = AstroSeoProps & {
  title: string;
  description: string;
  ogtype: string;
};

const { title, description, ogtype, ...seoProps }: Props = Astro.props;
---

<html lang="ja">
  <head>
    <AnalyticsHead />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="format-detection" content="telephone=no" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={siteData.gKeywords} />
    <meta name="theme-color" content={siteData.gColor} />
    <meta property="og:locale" content="ja_JP" />
    <meta property="og:site_name" content={title} />
    <meta property="og:image" content=`${siteData.gURL}ogimage.png` />
    <meta property="og:description" content={description} />
    <meta property="og:type" content={ogtype} />
    <meta property="og:title" content={title} />
    <meta property="og:url" content={siteData.gURL} />
    <meta name="twitter:card" content="summary_large_image" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <SEO {...seoProps} />
    <DesignToken />
    <ViewTransitions />
    <GoogleFontsOptimizer
      url="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;500;700&Roboto:wght@400&display=swap"
    />
  </head>
  <body>
    <AnalyticsBody />
    <slot />
    <script>
      import "../scripts/global/index";
    </script>
  </body>
</html>
