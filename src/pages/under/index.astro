---
import Footer from "@/components/layouts/footer/Footer.astro";
import Header from "@/components/layouts/header/Header.astro";
import MyIslandBody from "@/components/pages/under/index/MyIslandBody.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";
import { siteData } from "@/layouts/common/Variables.astro";

const title = `下層第一階層 | ${siteData.gTitle}`;
const description = `${siteData.gDescription}`;
const ogtype = "article";
const isTopPage = false;
const pageId = "under";
const cmnPath = `/assets/img/common/`;
const imgPath = `/assets/img/${pageId}/`;
---

<BaseLayout title={title} description={description} ogtype={ogtype}>
  <Header isTopPage={isTopPage} />
  <main id="contents" class="gContents">
    <div class="gContents__inner">
      <MyIslandBody />
    </div>
  </main>
  <Footer />
</BaseLayout>
