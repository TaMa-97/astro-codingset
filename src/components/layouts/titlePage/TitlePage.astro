---
export interface TitlePageProps {
  parentId: string;
  pageId: string;
  titleJa: string;
  titleEn: string;
}

const { parentId, pageId, titleJa, titleEn } = Astro.props;
---

<div class={`cmpTitlePage -${parentId} -${pageId}`}>
  <div class="cmpTitlePage__inner" transition:name={pageId}>
    <div class="cmpTitlePage__titleArea">
      <h1 class="cmpTitlePage__title">
        {titleJa}<span class="cmpTitlePage__title-en">{titleEn}</span>
      </h1>
    </div>
    <div class="cmpTitlePage__img">
      <img src="https://placehold.jp/1000x700.png" alt="" />
    </div>
  </div>
</div>

<style lang="scss">
  @use "sass:math";

  $_imgPath: "/assets/img/";

  .cmpTitlePage {
    $_: ".cmpTitlePage";

    padding: 30px $containerPadding 30px $containerPadding;
    margin-bottom: 50px;
    background: #f2f2f2;

    &__inner {
      position: relative;
      max-width: 976px;
      margin-right: auto;
      margin-left: auto;
    }

    &__list {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      justify-content: flex-start;
    }

    &__item {
      width: calc((100% - 20px) / 2);

      @include tabletP {
        width: 100%;
      }
    }

    &__img {
      img {
        border-radius: 20px;
      }
    }

    &__titleArea {
      position: absolute;
      right: 0;
      bottom: 0;
      left: 0;
      z-index: 1;
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 15px 30px;
      margin: auto;
      color: #fff;
      background: map-get($mainColor, color01);
      border-radius: 0 0 20px 20px;

      @include tabletP {
        padding: 15px 20px;
      }
    }

    &__title {
      display: flex;
      gap: 15px;
      align-items: center;
      justify-content: flex-start;
      font-weight: 500;
      letter-spacing: 0.05em;

      @include fz(26);

      @include tabletP {
        @include fz(20);

        gap: 5px;
      }

      &-en {
        position: relative;
        top: 2px;
        display: inline-block;
        font-family: $fontAlpha;
        font-weight: 400;
        letter-spacing: 0.1em;

        @include fz(16);

        @include tabletP {
          @include fz(13);
        }
      }
    }
  } //.cmpTitlePage
</style>
