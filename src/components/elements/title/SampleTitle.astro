---
export interface Props {
  title: string;
  level?: number;
}

const { title, level = 2 } = Astro.props;
const Heading = `h${level}`;
---

<Heading class="cmpSampleTitle" data-fadein>{title}</Heading>

<style lang="scss">
  @use "sass:math";

  .cmpSampleTitle {
    $_: &;

    position: relative;
    padding: 17px 22px;
    margin-bottom: 30px;
    font-weight: 700;
    line-height: math.div(35, 24);
    letter-spacing: 0.05em;
    background: #f2f2f2;

    @include fz(24);

    border-left: 4px solid map-get($mainColor, color01);

    @include tabletP {
      padding: 10px 15px;
      margin-bottom: 15px;

      @include fz(18);
    }
  } //.cmpSampleTitle
</style>
